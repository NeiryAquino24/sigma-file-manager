{
  "engines": {
    "node": ">=20.10.0"
  },
  "type": "module",
  "name": "sigma-file-manager-v2",
  "productName": "Sigma File Manager v2",
  "version": "2.0.0-alpha.1",
  "private": true,
  "license": "GPL-3.0-or-later",
  "author": "Aleksey Hoffman",
  "email": "aleksey.hoffman.public@gmail.com",
  "homepage": "https://github.com/aleksey-hoffman/sigma-file-manager/tree/v2",
  "description": "",
  "keywords": [
    "open-source",
    "app",
    "file",
    "manager",
    "explorer",
    "browser",
    "modern",
    "cross-platform",
    "vue",
    "tauri",
    "rust",
    "js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run ts:check && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:webkit-igpu": "env WEBKIT_DISABLE_COMPOSITING_MODE=1 npm run tauri dev",
    "tauri:build": "tauri build",
    "gen-icons": "tauri icon ./src/assets/icons/logo-1024x1024.png",
    "cargo-update": "cd ./src-tauri && cargo update",
    "cargo-build": "cd ./src-tauri && cargo build",
    "lint": "eslint --fix --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts src/",
    "stylelint": "npx stylelint --fix --ext .css,.scss,.vue src/",
    "ts:check": "vue-tsc --noEmit -p tsconfig.json",
    "sync-i18n": "npx tsx ./scripts/sync-i18n.js",
    "sync-license": "npx tsx ./scripts/sync-license.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "eslint --fix"
    ],
    "src/**/*.{css,scss,vue}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@vueuse/core": "^10.8.0",
    "dayjs": "^1.11.10",
    "lodash.clonedeep": "^4.5.0",
    "minimatch": "^9.0.3",
    "overlayscrollbars": "^2.5.0",
    "overlayscrollbars-vue": "^0.5.7",
    "pinia": "^2.1.7",
    "radix-vue": "^1.4.8",
    "sigma-scrollkit": "^1.0.16",
    "splitpanes": "^3.1.5",
    "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store",
    "vue": "^3.4.19",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.3.0",
    "vue3-smooth-dnd": "^0.0.6"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.1",
    "@intlify/eslint-plugin-vue-i18n": "^2.0.0",
    "@tauri-apps/cli": "^1.5.10",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-newlines": "^1.3.4",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "readdirp": "^3.6.0",
    "stylelint": "^16.2.1",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^5.3.1",
    "vue-tsc": "^1.8.27"
  }
}